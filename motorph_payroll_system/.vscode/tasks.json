{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Maven",
            "type": "shell",
            "command": "mvn",
            "args": ["clean", "compile"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },        {
            "label": "Copy Dependencies",
            "type": "shell",
            "command": "mvn",
            "args": ["dependency:copy-dependencies", "-DoutputDirectory=target/dependency"],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },        {
            "label": "Full Build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build with Maven",
                "Copy Dependencies"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run MotorPH Application",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "target/classes;target/dependency/*",
                "com.motorph.Main"
            ],
            "group": "test",
            "dependsOn": "Full Build",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },        {
            "label": "Test Application",
            "type": "shell",
            "command": "mvn",
            "args": ["test"],
            "group": "test",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Quick Run",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "target/classes;target/dependency/*",
                "com.motorph.Main"
            ],
            "group": "test",
            "dependsOn": "Build with Maven",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run MotorPH (Direct Access)",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "target/classes;target/dependency/*",
                "com.motorph.TestMain"
            ],
            "group": "test",
            "dependsOn": "Build with Maven",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
